<!-- views/doctorsMenu.handlebars -->

<div class="container mb-5">
  <div class="row mt-5">
    <div class="col">
      <p class="aboutText">Welcome, <span id="nombreMedico">
  </span></p>
    </div>
    <div class="col">
      <a href="/patients"><button id="prescriptionLog" class="btn btn-outline-info float-right">New Patient</button></a>
    </div>
    <div class="col">
      <button class="btn btn-outline-danger float-right" id="logoutBtn"> Logout </button>
    </div>
  </div>
</div>

<br>

<div class="container">
  <h2>Patients: </h2>
  <table class="table table-hover medlist" id="patientUlList">
    <thead>
      <tr>
        <th scope="col">Last Name</th>
        <th scope="col">First Name</th>
        <th scope="col"> </th>
      </tr>
    </thead>
    <tbody>
      {{#each recs}}
      <tr>
        <td scope="row" data-id="{{this.id}}">{{this.lastname}}</td>
        <td> {{this.firstname}}</td>
        <td>
        <button type="button" class="btn btn-outline-info float-right" id="patientDetails" data-id="{{id}}"
          data-name="{{this.firstname}} {{this.lastname}}">
          More Info
        </button></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/doctorsMenu.js"></script>