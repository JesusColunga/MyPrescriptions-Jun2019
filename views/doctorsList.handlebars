<!-- views/doctorsList.handlebars -->

<div class="row">
  <div class="col-8 offset-2">
    <p> These are our available doctors: </p>
    <br>
    <ul id="med-list" class="list-group">
      {{#each recs}}
      <li data-id="{{this.id}}" class="list-group-item border-0">
        {{this.firstname}} {{this.lastname}}
        <br>
        <b>Specialty: </b> {{this.specialty}}
        <b>Contact: </b> {{this.email}}
        <b>Phone Number: </b>{{this.phone}}
        <hr>
      </li>
      {{/each}}
    </ul>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script src="/js/doctors.js"></script>