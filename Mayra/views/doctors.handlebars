<!-- views/doctors.handlebars -->


<div class="row">
  <div class="col-8 offset-2">
    <form class="clearfix mb-4" action="POST">
      <!-- -- Name ----- -->
      <div class="form-group">
        <label for="med-FirstName"> First Name </label>
        <input type="text" id="med-firstname" class="form-control" aria-describedby="med-FirstName" placeholder="John">
      </div>
      <div class="form-group">
        <label for="med-LastName"> Last Name </label>
        <input type="text" id="med-lastname" class="form-control" aria-describedby="med-LastName" placeholder="Doe">
      </div>
      <!-- -- Email ----- -->
      <div class="form-group">
        <label for="med-mail"> Email </label>
        <input type="text" id="med-email" class="form-control" aria-describedby="med-mail"
          placeholder="email@example.com">
      </div>
      <!-- -- Phone number --- -->
      <div class="form-group">
        <label for="med-phone"> Phone </label>
        <input type="text" id="med-phone" class="form-control" aria-describedby="med-phone" placeholder="555 555 5556">
      </div>
      <!-- -- Username ---- -->
      <div class="form-group">
        <label for="med-username"> Username</label>
        <input type="text" id="med-username" class="form-control" aria-describedby="med-username"
          placeholder="username">
      </div>
      <!-- -- Password - -->
      <div class="form-group">
        <label for="med-pass"> Password </label>
        <input type="password" id="med-password" class="form-control" aria-describedby="med-pass"
          placeholder="password">
      </div>
       <!-- -- Specialty- -->
      <div class="form-group">
        <label for="med-plicense"> Specialty </label>
        <input type="text" id="med-specialty" class="form-control" aria-describedby="med-specialty"
          placeholder="Neurologist">
      </div>

      <!-- -- Professional License- -->
      <div class="form-group">
        <label for="med-plicense"> Professional License </label>
        <input type="text" id="med-license" class="form-control" aria-describedby="med-plicense"
          placeholder="Professional License">
      </div>
      <!-- --------------- -->
      <button type="submit" id="submit" class="btn btn-primary float-right">Submit</button>
    </form>

    <h3>Doctors:</h3>
    <ul id="med-list" class="list-group">
      {{#each recs}}
      <li data-id="{{this.id}}" class="list-group-item border-0">
        <a href="doctors/{{this.id}}"> {{this.firstname}} {{this.lastname}} </a>
        <button class="btn btn-danger float-right delete">ｘ</button>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
<hr>
<a href="/">← Back To Home</a>

