<!-- views/pacientes.handlebars -->
<!--To add patients-->
<div class="card m-5">
  <form>
    <div class="form-group m-2">
      <label for="username">Patient's Name:</label>
      <input type="text" class="form-control" id="pat-name" aria-describedby="username" placeholder="Enter username">
    </div>
    <div class="form-group m-2">
      <label for="birthdate">Birth date: </label>
      <input type="text" class="form-control" id="pat-birthdate" placeholder="05/12/1980">
    </div>
     <div class="form-group m-2">
      <label for="patGender">Gender: </label>
      <input type="text" class="form-control" id="pat-gender" placeholder="M/F">
    </div>
    <div class="form-group m-2">
      <label for="patEmail">Email: </label>
      <input type="email" class="form-control" id="pat-email" placeholder="example@mail.com">
    </div>
    <div class="form-group m-2">
      <label for="patPhone">Phone number: </label>
      <input type="text" class="form-control" id="pat-phone" placeholder="555-555-5555">
    </div>
    <button type="type" class="btn btn-primary submitPatient">Submit</button>
  </form>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
