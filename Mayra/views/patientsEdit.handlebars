<!-- views/patientsEdit.handlebars -->
<!--To add patients-->
<div class="card m-5">
  <!-- Prescription Log Button-->
  <button id="prescriptionLog" class="btn btn-primary float-right">Prescription Log</button>
  <a href="/prescriptions/{{recs.id}}"><button id="createPrescription" class="btn btn-primary float-right">Create Prescription</button></a>

  <form>
    <div class="form-group m-2">
      <label for="patFirstName">First Name:</label>
      <input type="text" class="form-control" id="pat-firstname" aria-describedby="patFirstName" placeholder="{{recs.firstname}}">
    </div>

    <div class="form-group m-2">
      <label for="patLastName">Last Name:</label>
      <input type="text" class="form-control" id="pat-lastname" aria-describedby="patLastName" placeholder="{{recs.lastname}}">
    </div>

    <div class="form-group m-2">
      <label for="patBirthDate">Birth date: </label>
      <input type="text" class="form-control" id="pat-birthdate"  aria-describedby="patBirthDate" placeholder="{{recs.birthdate}}">
    </div>
     <div class="form-group m-2">
      <label for="patGender">Gender: </label>
      <input type="text" class="form-control" id="pat-gender"  aria-describedby="patGender" placeholder="{{recs.gender}}">
    </div>
    <div class="form-group m-2">
      <label for="patEmail">Email: </label>
      <input type="email" class="form-control" id="pat-email"  aria-describedby="patEmail" placeholder="{{recs.email}}">
    </div>
    <div class="form-group m-2">
      <label for="patPhone">Phone number: </label>
      <input type="text" class="form-control" id="pat-phone"  aria-describedby="patPhone" placeholder="{{recs.phone}}">
    </div>
    <button type="submit" id="updatePatient" class="btn btn-primary float-right">Update</button>
  </form>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
 <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="/js/patientsEdit.js"></script>
