<!-- views/doctorsList.handlebars -->

<h2> Prescriptions:</h2>
<br>
<table class="table table-hover preslist">
  <thead>
    <tr>

      <th scope="col">Last Name</th>
      <th scope="col">First Name</th>
      <th scope="col">Prescription</th>
      <th scope="col">Observations</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each recs}}
    <tr>
      <th scope="row" data-id="{{this.id}}">{{this.lastname}}, {{this.firstname}}</th>
      <td>{{this.lastname}}</td>
      <td>{{this.firstname}}</td>
      <td>{{this.prescription}}</td>
      <td>{{this.observations}}</td>
      <td>{{this.createdAt}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/prescriptions.js"></script>

